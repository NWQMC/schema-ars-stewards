<?xml version="1.0" encoding="UTF-8"?> 
<databaseChangeLog 
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"> 

    <preConditions>
        <dbms type="oracle" />
        <runningAs username="ARS_STEWARDS" />
    </preConditions>

    <changeSet author="drsteini" id="1SchemaCiDataAA" context="ci">
        <sqlFile encoding="utf8" relativeToChangelogFile="true" path="changeLog1CiData.sql"/>
        <rollback>
           <delete tableName="activity_00000">
                <where>activity_pk = 1</where>
            </delete>
           <delete tableName="characteristicname_00000">
                <where>code_value in ('Acetochlor', 'Alachlor', 'Atrazine', 'Metolachlor', 'Metribuzin', 'Nitrate-N', 'Orthophosphate', 'Phosphate', 'Simazine')</where>
            </delete>
           <delete tableName="country_00000">
                <where>code_value = 'US'</where>
            </delete>
           <delete tableName="county_00000">
                <where>code_value in ('US:19:015', 'US:19:079', 'US:19:083', 'US:19:169')</where>
            </delete>
           <delete tableName="organization_00000">
                <where>code_value = 'ARS'</where>
            </delete>
           <delete tableName="result_00000">
                <where>result_pk in (1,2)</where>
            </delete>
           <delete tableName="samplemedia_00000">
                <where>code_value = 'water'</where>
            </delete>
           <delete tableName="sitetype_00000">
                <where>code_value in ('Land', 'Stream')</where>
            </delete>
           <delete tableName="state_00000">
                <where>code_value = 'US:19'</where>
            </delete>
           <delete tableName="station_00000">
                <where>station_pk = 1</where>
            </delete>
           <delete tableName="characteristictype_00000">
                <where>code_value in ('Biological', 'Inorganics, Major, Non-metals', 'Inorganics, Minor, Metals', 'Nutrient', 'Organics, Pesticide', 'Physical')</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>
